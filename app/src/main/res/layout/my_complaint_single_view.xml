<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="550dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="80dp"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/my_complaint_email"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:text="Email"
            android:gravity="center_vertical"
            android:background="@drawable/input_field" />

        <TextView
            android:id="@+id/my_complaint_bin_id"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:text="Bin ID"
            android:gravity="center_vertical"
            android:layout_below="@id/my_complaint_email"
            android:background="@drawable/input_field" />
        <TextView
            android:id="@+id/my_complaint_area"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:text="Area"
            android:gravity="center_vertical"
            android:layout_below="@id/my_complaint_bin_id"
            android:background="@drawable/input_field" />
        <TextView
            android:id="@+id/my_complaint_complaints"
            android:layout_width="280dp"
            android:layout_height="230dp"
            android:layout_marginBottom="5dp"
            android:text="Complaint details"
            android:gravity="center_vertical"
            android:layout_below="@id/my_complaint_area"
            android:background="@drawable/input_field" />

        <TextView
            android:id="@+id/my_complaint_status"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@id/my_complaint_complaints"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input_field"
            android:gravity="center_vertical"
            android:text="Status" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>